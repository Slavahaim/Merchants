<p id="notice"><%= notice %></p>

<h1>Merchants</h1>

<%= link_to 'New Merchant', new_merchant_path, class: 'btn btn-primary' %>

<table class="table table-success table-striped table-hover table-borderless">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Street</th>
      <th>Country code</th>
      <th>Extra info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= link_to merchant.name, merchant %></td>
        <td><%= merchant.city %></td>
        <td><%= merchant.street %></td>
        <td><%= merchant.country_code %></td>
        <td><%= merchant.extra_info %></td>
        <td>
          <%= link_to  edit_merchant_path(merchant) do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td><%= link_to merchant, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

